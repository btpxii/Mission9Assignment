@{
}
@model IEnumerable<string>
<!--Made the categories list into a functional dropdown-->
<div padding="2px">
    <div class="dropdown mt-1">
        <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="categoryDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Categories
        </button>
        <div class="dropdown-menu" aria-labelledby="categoryDropdown">
            <a class="dropdown-item" asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNum="1">All Categories</a>
            @foreach (string c in Model)
            {
                <a class="dropdown-item @(ViewBag.SelectedCategory == c ? "active" : "")" asp-controller="Home" asp-action="Index" asp-route-bookCategory="@c" asp-route-pageNum="1">@c</a>
            }
        </div>
    </div>
</div>